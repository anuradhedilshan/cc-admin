<mjml>
  <mj-head>
    <mj-title>Verify Your Email Address</mj-title>
  </mj-head>
  <mj-body>
    {{> header title="Verify Your Email Address" }}

    <mj-section background-color="#ffffff" padding="40px 20px">
        <mj-column>
            <mj-text color="#064e3b" font-size="16px" font-family="Helvetica, Arial, sans-serif" line-height="24px" padding="0 0 20px 0">
                Welcome to CalorieCounter.lk! Thank you for creating an account with us.
            </mj-text>
            
            <mj-text color="#525252" font-size="14px" font-family="Helvetica, Arial, sans-serif" line-height="22px" padding="0 0 30px 0">
                To complete your registration and start tracking your nutrition, please verify your email address by clicking the button below:
            </mj-text>

            <mj-button font-family="Helvetica, Arial, sans-serif"
                       background-color="#fdb326"
                       color="#064e3b"
                       font-size="16px"
                       font-weight="bold"
                       border-radius="25px"
                       padding="15px 30px"
                       href="{{ verifyEmailAddressUrl }}?token={{ verificationToken }}">
                Verify Email Address
            </mj-button>
            
            <mj-text color="#525252" font-size="12px" font-family="Helvetica, Arial, sans-serif" line-height="18px" padding="30px 0 0 0">
                If you didn't create this account, you can safely ignore this email.
            </mj-text>
        </mj-column>
    </mj-section>

    {{> footer }}
  </mj-body>
</mjml>
